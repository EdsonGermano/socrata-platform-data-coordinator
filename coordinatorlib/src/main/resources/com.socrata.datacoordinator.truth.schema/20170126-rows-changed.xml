<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet author="chi" id="20170126-rows-changed">
        <preConditions onFail="MARK_RAN">
            <not><columnExists tableName="secondary_manifest" columnName="rows_changed"/></not>
        </preConditions>
        <addColumn tableName="secondary_manifest">
            <column name="rows_changed" type="bigint"/>
            <column name="rows_changed_since" type="timestamp with time zone"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
